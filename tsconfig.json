{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/access/*": ["./src/access/*"],
      "@/app/*": ["./src/app/*"],
      "@/auth/*": ["./src/auth/*"],
      "@/collections/*": ["./src/collections/*"],
      "@/components/*": ["./src/components/*"],
      "@/config/*": ["./src/config/*"],
      "@/contexts/*": ["./src/contexts/*"],
      "@/features/*": ["./src/features/*"],
      "@/fields/*": ["./src/fields/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/i18n/*": ["./src/i18n/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/middleware/*": ["./src/middleware/*"],
      "@/providers/*": ["./src/providers/*"],
      "@/schemas/*": ["./src/schemas/*"],
      "@/services/*": ["./src/services/*"],
      "@/store/*": ["./src/store/*"],
      "@/tasks/*": ["./src/tasks/*"],
      "@/types/*": ["./src/types/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/constants/*": ["./src/constants/*"],
      "@/containers/*": ["./src/containers/*"],
      "@/utilities/*": ["./src/utilities/*"]
    }
  },
  "include": ["src", "types", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "**/__tests__/**/*.test.ts", "**/__tests__/**/*.test.tsx"]
}
