    "postcss": "^8.5.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.59.0",
    "react-router-dom": "^7.6.3",
    "react-toastify": "^11.0.5",
    "resend": "^4.6.0",
    "sharp": "0.34.2",
    "stripe": "^18.2.1",
    "swiper": "^11.2.10",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "typesense": "^2.0.3",
    "yup": "^1.6.1",
    "zod": "^3.25.67",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250628.0",
    "@eslint/eslintrc": "^3.3.1",
    "@graphql-codegen/cli": "5.0.7",
    "@graphql-codegen/introspection": "4.0.3",
    "@graphql-codegen/typescript": "4.1.6",
    "@graphql-codegen/typescript-document-nodes": "^4.0.16",
    "@graphql-codegen/typescript-operations": "4.6.1",
    "@graphql-codegen/typescript-react-query": "6.1.1",
    "@next/bundle-analyzer": "^15.3.4",
    "@payloadcms/graphql": "3.43.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.15.34",
    "@types/pg": "^8.15.4",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.2",
    "eslint": "^9.30.0",
    "eslint-config-next": "15.3.0",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^9.1.7",
    "jest": "^30.0.3",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "typescript": "5.7.3",
    "wrangler": "^4.22.0"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp"
    ],
    "overrides": {
      "sharp": "0.34.2",
      "@payloadcms/graphql": "3.43.0",
      "payload": "3.43.0",
      "@payloadcms/next": "3.43.0",
      "@payloadcms/ui": "3.43.0",
      "@payloadcms/richtext-lexical": "3.43.0",
      "@payloadcms/storage-s3": "3.43.0",
      "@payloadcms/payload-cloud": "3.43.0",
      "@payloadcms/db-postgres": "3.43.0"
    }
  }
