{
  "name": "Butelka Wineshop",
  "version": "1.0.0",
  "description": "Butelka Wineshop intricate ecommerce application",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--no-deprecation next build",
    "build:analyze": "cross-env NODE_OPTIONS=--no-deprecation ANALYZE=true next build",
    "build:profile": "cross-env NODE_OPTIONS=--no-deprecation NEXT_PROFILING=true next build",
    "codegen": "graphql-codegen",
    "codegen:watch": "graphql-codegen --watch",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev --turbo",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "sync:flat-wine": "cross-env NODE_OPTIONS=--no-deprecation tsx scripts/force-update-flat-variants.ts",
    "populate:related-wines": "cross-env NODE_OPTIONS=--no-deprecation tsx scripts/populate-related-wines.ts",
    "sync:cloud-images": "cross-env NODE_OPTIONS=--no-deprecation tsx scripts/sync-cloud-images.ts",
    "sync:wine-images": "cross-env NODE_OPTIONS=--no-deprecation tsx scripts/sync-existing-wine-images.ts",
    "typesense:setup": "cross-env NODE_OPTIONS=--no-deprecation tsx scripts/setup-typesense.ts setup",
    "typesense:sync": "cross-env NODE_OPTIONS=--no-deprecation tsx scripts/setup-typesense.ts sync",
    "typesense:full": "cross-env NODE_OPTIONS=--no-deprecation tsx scripts/setup-typesense.ts full",
    "typesense:test": "cross-env NODE_OPTIONS=--no-deprecation tsx scripts/test-typesense.ts",
    "db:backup": "./scripts/backup-database.sh",
    "db:migrate-to-docker": "./scripts/migrate-to-docker.sh",
    "seed:countries": "cross-env NODE_OPTIONS=--no-deprecation tsx scripts/setup/seed-wine-countries.ts",
    "seed:tags": "cross-env NODE_OPTIONS=--no-deprecation tsx scripts/setup/seed-tags.ts",
    "seed:grape-varieties": "cross-env NODE_OPTIONS=--no-deprecation tsx scripts/setup/seed-grape-varieties.ts",
    "seed:regions": "cross-env NODE_OPTIONS=--no-deprecation tsx scripts/setup/seed-wine-regions.ts",
    "seed:wineries": "cross-env NODE_OPTIONS=--no-deprecation tsx scripts/setup/seed-wineries.ts",
    "seed:moods": "cross-env NODE_OPTIONS=--no-deprecation tsx scripts/setup/seed-moods.ts",
    "seed:styles": "cross-env NODE_OPTIONS=--no-deprecation tsx scripts/setup/seed-styles.ts",
    "seed:climates": "cross-env NODE_OPTIONS=--no-deprecation tsx scripts/setup/seed-climates.ts",
    "seed:wines": "cross-env NODE_OPTIONS=--no-deprecation tsx scripts/setup/seed-wines.ts",
    "seed:all": "cross-env NODE_OPTIONS=--no-deprecation tsx scripts/setup/seed-all.ts",
    "upload:wine-images": "cross-env NODE_OPTIONS=--no-deprecation tsx scripts/setup/upload-wine-images.ts",
    "verify:image-mapping": "cross-env NODE_OPTIONS=--no-deprecation tsx scripts/verify-image-mapping.ts"
  },
  "dependencies": {
    "@auth/core": "0.34.2",
    "@conform-to/react": "^1.7.2",
